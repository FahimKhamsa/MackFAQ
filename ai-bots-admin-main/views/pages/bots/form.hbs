<form onsubmit="submitForm(event)" data-action="submit">
  <div class="form-group">
    <label for="id">ID:</label>
    <input readonly class="form-control" id="id" name="id" value="{{ bot.id }}">
  </div>

  <div class="form-group">
    <label for="test_url">Test URL:</label>
    <input class="form-control" id="test_url" name="test_url" value="{{ bot.test_url }}">
  </div>

  <div class="form-group">
    <label for="production_url">Production URL:</label>
    <input class="form-control" id="production_url" name="production_url" value="{{ bot.production_url }}">
  </div>

  <div class="form-group">
    <label for="page_title">Page title:</label>
    <input class="form-control" id="page_title" name="page_title" value="{{ bot.page_title }}">
  </div>

  <div class="form-group">
    <label for="page_meta_description">Page meta description:</label>
    <input class="form-control" id="page_meta_description" name="page_meta_description" value="{{ bot.page_meta_description }}">
  </div>

  <div class="form-group">
    <label for="greeting_message_text">Greeting message text:</label>
    <input class="form-control" id="greeting_message_text" name="greeting_message_text" value="{{ bot.greeting_message_text }}">
  </div>

  <div class="form-group">
    <label for="prompt_prefix">Prompt prefix text:</label>
    <textarea class="form-control" id="prompt_prefix" name="prompt_prefix">{{ bot.prompt_prefix}}</textarea>
  </div>

  <div class="form-group">
    <label for="prompt_placeholder">Prompt placeholder text:</label>
    <input class="form-control" id="prompt_placeholder" name="prompt_placeholder" value="{{ bot.prompt_placeholder}}">
  </div>

  <div class="form-group">
    <label for="bot_name_label">Bot name label:</label>
    <input class="form-control" id="bot_name_label" name="bot_name_label" value="{{ bot.bot_name_label}}">
  </div>

  <div class="form-group">
    <label for="user_name_label">User name label:</label>
    <input class="form-control" id="user_name_label" name="user_name_label" value="{{ bot.user_name_label }}">
  </div>

  <div class="form-group">
    <label for="exists_responses_provider_url">Provider_url for existend messages:</label>
    <input class="form-control" id="exists_responses_provider_url" name="exists_responses_provider_url" value="{{ bot.exists_responses_provider_url}}">
  </div>

  <div class="form-group">
    <label for="favicon_file">Favicon image:</label>
    <input type="file" class="form-control" id="favicon_file" name="favicon_file">
  </div>

  <div class="form-group">
    <label for="background_image_file">Background image:</label>
    <input type="file" class="form-control" id="background_image_file" name="background_image_file">
  </div>

  <input type="submit" value="Save">
</form>

